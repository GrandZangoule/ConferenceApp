            <GradientStop Color="{StaticResource Primary}" Offset="0.08"/>
            <GradientStop Color="#8A2387" Offset="0.6"/>
            <GradientStop Color="Aquamarine" Offset="1.0"/>
        </LinearGradientBrush>
    </Shell.FlyoutBackdrop>

